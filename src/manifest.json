{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "2.3.1",
  "author": "Lorenz Froihofer: support for TB >= 3.0, since Dec. 2009",
  "homepage_url": "http://www.froihofer.net/xnote/",
  "applications": {
    "gecko": {
      "id": "xnote@froihofer.net",
      "strict_min_version": "68.0",
      "strict_max_version": "68.*"
    }
  },
  "default_locale" : "en_US",
  "legacy": {
    "type" : "xul",
    "options": {
      "page": "chrome://xnote/content/preferences.xul",
      "open_in_tab": false
    }
  },
  "icons": {
    "32": "chrome/skin/icon32.png"
  },
  "background": {
    "scripts": ["xn-background.js"]
  },
  "experiment_apis": {
    "WindowListener": {
      "schema": "chrome/content/api/WindowListener/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["WindowListener"]],
        "script": "chrome/content/api/WindowListener/implementation.js"
      }
    }
    },  
    "LegacyPrefs": {
      "schema": "chrome/content/api/LegacyPrefs/schema.json",
      "parent": {
        "scopes": ["addon_parent"],
        "paths": [["LegacyPrefs"]],
        "script": "chrome/content/api/LegacyPrefs/implementation.js"
      
      }
    }
}